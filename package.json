{
  "name": "sugerencias",
  "displayName": "sugerencias",
  "description": "extencion para realizar sugerencias",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sugerencias.openServer",
        "title": "openServer"
      },
      {
        "command": "sugerencias.openConnection",
        "title": "openConnection"
      },
      {
        "command": "sugerencias.showUserList",
        "title": "Actualizar Usuarios",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sugerencias.showUserList",
          "group": "navigation",
          "when": "view == treeUsers"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fastShare",
          "title": "FastShare",
          "icon": "./src/assets/duck.svg"
        }
      ]
    },
    "views": {
      "fastShare": [
        {
          "id": "conections",
          "name": "Conexiones"
        },
        {
          "id": "treeUsers",
          "name": "Users List"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "conections",
        "contents": "[Abrir Conexión](command:sugerencias.openServer)",
        "when": "openConnectionStatus == 'true'",
        "enablement": "true"
      },
      {
        "view": "conections",
        "contents": "[Conexion Abierta](command:sugerencias.openServer)",
        "when": "openConnectionStatus == 'false'",
        "enablement": "false"
      },
      {
        "view": "conections",
        "contents": "[Cargando...](command:sugerencias.openServer)",
        "when": "openConnectionStatus == 'loading'",
        "enablement": "false"
      },
      {
        "view": "conections",
        "contents": "[Cerrar Conexión](command:sugerencias.closeServer)",
        "when": "openConnectionStatus == 'true'",
        "enablement": "false"
      },
      {
        "view": "conections",
        "contents": "[Cargando...](command:sugerencias.closeServer)",
        "when": "openConnectionStatus == 'loading'",
        "enablement": "false"
      },
      {
        "view": "conections",
        "contents": "[Cerrar Conexión](command:sugerencias.closeServer)",
        "when": "openConnectionStatus == 'false'",
        "enablement": "true"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/bonjour": "^3.5.13",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "bonjour": "^3.5.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "vsls": "^1.0.4753",
    "ws": "^8.16.0"
  }
}
